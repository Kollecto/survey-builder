= admin_frame do
  .page-header
    %h1
      = link_to @iteration.title, [:admin, @iteration]
      %br
      %small
        - case @by
        - when 'iteration'
          Pages (#{@iteration.survey_pages.count})
        - else
          Survey Pages (#{@survey_pages.unscoped.count})
  = render_flash_messages!

  - if @survey_pages.any?
    = render 'table', :survey_pages => @survey_pages
  - else
    .jumbotron.text-center
      %h1 Nothing to display.
      %p There are no pages to show you.
